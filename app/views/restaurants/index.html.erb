<h1>Villa Madeleine Homeowners</h1>
<h2>Easy Guide to Dining, Bars and Clubs</h2>
<div><%= link_to "Add a new Restaurant", new_restaurant_path %></div>

<% @restaurants.each do |r| %>
	

	<div class="booyah-box col-xs-10 col-xs-offset-1">
	<p> Restaurant ID # <%= r.id %> </p>	
      <h1><%= link_to r.name, restaurant_path(r) %></h1>
    <i><%= r.address %></i><br /><br />
    <p><%= r.description %></p><br />

    <% if r.user.present? %>
      <small><%= r.user.email %></small>
    <% end %>

    <% if r.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
         <% if r.comments.last.humanized_rating.present? %>
            <b><%= r.comments.last.humanized_rating %></b> -
          <% end %>
          <%= r.comments.last.message %>
          <small><%= r.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>

   
  </div>

  <hr />
	
<% end %>



